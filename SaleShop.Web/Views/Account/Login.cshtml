@model SaleShop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div>
                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(n => n.UserName)
            </div>
            <div>
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(n => n.Password)
            </div>
            <div>
                @Html.CheckBoxFor(n => n.RememberMe)
                Nhớ mật khẩu ?
            </div>
            <input type="submit" value="Login">
        }
    </div>
    <div class=" login-left">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký tại link dưới đây</p>
        <a class="acount-btn" href="dang-ky.html">Đăng ký thành viên</a>
    </div>
    <div class="clearfix"> </div>
</div>